<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDD5"
    tools:context=".RiwayatActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnrawatinap"
        android:layout_width="0dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="rawat inap"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_baseline_king_bed_24"
        android:background="@drawable/inactive_back"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnrawatjalan"
        android:drawableStart="@drawable/ic_baseline_king_bed_24" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnrawatjalan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Rawat Jalan"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_baseline_wheelchair_pickup_24"
        android:background="@drawable/inactive_back"
        app:layout_constraintStart_toEndOf="@id/btnrawatinap"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableStart="@drawable/ic_baseline_wheelchair_pickup_24" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/VPriwayat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnrawatinap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>