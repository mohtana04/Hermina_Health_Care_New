<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="@drawable/customgridview">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvtipetransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="tipe transaksi"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvnamapasien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="nama pasien"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvtipetransaksi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvdokternya"/>

        <TextView
            android:id="@+id/tvdokternya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="nama dokter"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvnamapasien"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvnotransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no transaksi"
            app:layout_constraintTop_toBottomOf="@id/tvdokternya"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvtgltransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tgl transaksi"
            app:layout_constraintTop_toBottomOf="@id/tvdokternya"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>