<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <view
        android:id="@+id/view1raddet"
        class="androidx.appcompat.widget.AppCompatButton"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#019443"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/TVdokterpemeriksaraddet"/>

    <TextView
        android:id="@+id/TVpemeriksaannamaraddet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="nama pemeriksaan"
        android:textColor="#019443"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/view1raddet"/>

    <TextView
        android:id="@+id/TVdokterpemeriksaraddet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@color/black"
        android:scaleType="centerCrop"
        android:text="dokter pemeriksa"
        android:layout_marginLeft="5dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/TVpemeriksaannamaraddet"
        app:layout_constraintStart_toEndOf="@id/view1raddet"/>

    <TextView
        android:id="@+id/TVnofotoraddet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="no foto"
        android:textColor="@color/black"
        android:textSize="8sp"
        tools:ignore="SmallSp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/TVcatatanhasilraddet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@color/black"
        android:scaleType="centerCrop"
        android:text="catatan pemeriksaan"
        android:layout_marginLeft="5dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/TVdokterpemeriksaraddet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>