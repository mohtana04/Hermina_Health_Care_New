<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="5dp">

        <view
            android:id="@+id/viewfar"
            class="androidx.appcompat.widget.AppCompatButton"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#019443"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/TVnmobatfar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Sanmol asdfsdfafdfffasffsafsfsdfafasdfsdfaf"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/viewfar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVjumlahfar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="10"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/TVcarapakaifar"
            app:layout_constraintEnd_toStartOf="@+id/TVcarapakaifar"
            app:layout_constraintStart_toEndOf="@+id/TVnmobatfar"
            app:layout_constraintTop_toTopOf="@id/TVcarapakaifar"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/TVcarapakaifar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="2 x 1 sehari"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ACBlihatdetailrackanfar"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/customgridviewtiny"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:text="Detail Racikan"
            android:textSize="10sp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/TVcarapakaifar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>