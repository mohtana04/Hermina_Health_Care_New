<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CVfarmasiresep"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="5dp">

    <view
        android:id="@+id/view1fardet"
        class="androidx.appcompat.widget.AppCompatButton"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#019443"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tittleTVjumlahfar"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/TVnmobatfar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#019443"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/view1fardet"/>

    <TextView
        android:id="@+id/tittleTVjumlahfar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="banyak"
        android:textColor="@color/black"
        android:textSize="8sp"
        tools:ignore="SmallSp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/TVnmobatfar"
        app:layout_constraintStart_toEndOf="@id/view1fardet"
        app:layout_constraintEnd_toStartOf="@id/tittleTVcarapakaifar"/>

    <TextView
        android:id="@+id/tittleTVcarapakaifar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Cara pakai :"
        android:textColor="@color/black"
        android:textSize="8sp"
        tools:ignore="SmallSp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/TVnmobatfar"
        app:layout_constraintStart_toEndOf="@id/tittleTVjumlahfar"
        app:layout_constraintEnd_toStartOf="@id/tittleTVlihatdetailrackanfar"/>

    <TextView
        android:id="@+id/tittleTVlihatdetailrackanfar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Detail racikan :"
        android:textColor="@color/black"
        android:textSize="8sp"
        tools:ignore="SmallSp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/TVnmobatfar"
        app:layout_constraintStart_toEndOf="@id/tittleTVcarapakaifar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/TVjumlahfar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/tittleTVjumlahfar"
        app:layout_constraintEnd_toEndOf="@+id/tittleTVjumlahfar"
        app:layout_constraintStart_toStartOf="@+id/tittleTVjumlahfar"/>

    <TextView
        android:id="@+id/TVcarapakaifar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/tittleTVcarapakaifar"
        app:layout_constraintEnd_toEndOf="@+id/tittleTVcarapakaifar"
        app:layout_constraintStart_toStartOf="@+id/tittleTVcarapakaifar"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ACBlihatdetailrackanfar"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/customgridviewtiny"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:text="Detail Racikan"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tittleTVlihatdetailrackanfar"
        app:layout_constraintEnd_toEndOf="@+id/tittleTVlihatdetailrackanfar"
        app:layout_constraintStart_toStartOf="@+id/tittleTVlihatdetailrackanfar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/TVjumlahfar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/TVjumlahracikanfar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TVnamaobatracikfar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>